#include <stdio.h>
int main (){
int x,y,a,b,lcm;
printf("enter the number\n");
scanf("%d%d",&x,&y);
if(x==0&&y==0){
printf("Bmm is 0 and Kmm is 0");
}else if(x==0){
printf("Bmm is %d and Kmm is 0",y);
}else if(y==0){
printf("Bmm is %d and Kmm is 0",x);
}
a=x;
b=y;
while(x!=y){
if(x>y){
x-=y;
}else{
y-=x;
}
}
lcm=(a*b)/x;
printf("Bmm is %d and Kmm is %d",x,lcm);
}
