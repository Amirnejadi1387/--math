#include <stdio.h>
int main(){
int i=1,n,j=1,k=1,a;
printf("Enter the number \n");
scanf("%d",&n);
while(i<=n){
if(n%i==0&&i%2==1){
printf("yeki az shomarand hai on %d ast \n",i);
printf("!-------------!\n");
printf("%d ham fard ast \n",i);
printf("!-------------!\n");
i++;
j++;
}else if(n%i==0){
	printf("yeki az shomarand hai on %d ast \n",i);
i++;
k++;
}else{
	i++;
}
}
j--;
k--;
a=j+k;
printf("!------------------------------------!\n");
printf("%d ta shomarandei fard vojod darad \n",j);
printf("!------------------------------------!\n");
printf("%d ta shomarandei zoje vojod darad \n",k);
printf("!-------------------------------------!\n");
printf("%d ta shomarandei vojod darad \n",a);
printf("!-------------------------------------!\n");
return 0;
}
